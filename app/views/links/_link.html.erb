<div id="<%= dom_id link %>">
  <p>
    <strong>Url:</strong>
    <%= link.url %>
  </p>

  <p>
    <strong>Slug:</strong>
    <%= link.slug %>
  </p>

  <p>
    <strong>Expire at:</strong>
    <%= link.expire_at %>
  </p>

  <p>
    <strong>Shorten URL:</strong>
    <a href="<%= short_url slug: link.slug %>"><%= short_url slug: link.slug %></a>
  </p>

</div>
